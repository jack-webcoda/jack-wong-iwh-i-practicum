//- doctype html
html
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/reset.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    body
        .container
            .mt-4.mb-4
                h1 Update Custom Object Form
            a.my-4.d-block(href="/") Return to the homepage
            form(method="POST" action="/update-cobj")
                .mb-3.d-flex.gap-2.align-items-center
                    label(for="airline_name", style={width:'160px'}).flex-shrink-0 Airline Name
                    input.form-control(type="text" name="airline_name" id="airline_name" required)
                .mb-3.d-flex.gap-2.align-items-center
                    label(for="airline_code", style={width:'160px'}).flex-shrink-0 Airline Code
                    input.form-control(type="text" name="airline_code" id="airline_code" required)
                .mb-3.d-flex.gap-2.align-items-center
                    label(for="country", style={width:'160px'}).flex-shrink-0 Country
                    input.form-control(type="text" name="country" id="country" required)
                .mb-3.d-flex.gap-2.align-items-center
                    label(for="website", style={width:'160px'}).flex-shrink-0 Website URL
                    input.form-control(type="text" name="website" id="website" required)
                .mt-4
                    button.btn.btn-primary(type="submit") Submit